+!-----if we are interested in the XC (local) potential write it here:
+
+      IF (IO%LVXC) THEN
+
+#ifdef MPI
+         IF (WDES%COMM_KINTER%NODE_ME.EQ.1) THEN
+#endif
+         io_begin
+         IF (IO%LOPEN) OPEN(IO%IUVTOT,FILE='XCPOT',STATUS='UNKNOWN')

+         CALL OUTPOT(GRIDC, IO%IUVTOT,.TRUE.,CVTOT(1,ISP))
+         ENDDO
+         IF (IO%LOPEN) THEN
+         do_io CALL REOPEN(IO%IUVTOT)
+         ELSE
+         do_io REWIND IO%IUVTOT
+         ENDIF
+#ifdef MPI
+         ENDIF
+#endif
